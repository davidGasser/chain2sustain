<!DOCTYPE html>
<html>

<head>
  <title>Record Emissions</title>
  <%- include('head.ejs') %>
    <style>
      body {
        background-color: #f8f9fa;
      }

      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 50px 20px;
      }

      .form-label {
        font-weight: bold;
      }

      .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
      }

      .btn-primary:hover {
        background-color: #0069d9;
        border-color: #0062cc;
      }

      .input-with-placeholder {
        position: relative;
      }

      .input-with-placeholder input {
        padding-right: 100px;
        /* Platz f√ºr den Platzhaltertext */
      }

      .input-with-placeholder .placeholder {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        padding: 8px;
        color: #999;
        pointer-events: none;
        /* Verhindert, dass der Platzhalter klickbar ist */
        transition: opacity 0.2s;
      }

      .input-with-placeholder input:focus+.placeholder {
        opacity: 0;
        /* Der Platzhalter wird beim Fokussieren des Eingabefelds ausgeblendet */
      }
    </style>
</head>

<body>
  <!-- Navigation Bar -->
  <%- include('navbar') %>
    <div class="container">
      <h1>Record Emissions</h1>
      <!-- Notification container -->
      <%- include('notification') %>

        <form action="/submit_emissions" method="POST" enctype="multipart/form-data">
          <!-- Input fields -->
          <div class="mb-3">
            <label for="ghgNumber" class="form-label">GHG Emissions:</label>
            <input type="number" id="ghgNumber" name="ghgNumber" class="form-control" placeholder="in kg CO2" min="0">
          </div>
          <div class="mb-3">
            <label for="additionalInfo" class="form-label">Additional Information:</label>
            <input type="text" id="additionalInfo" name="additionalInfo" class="form-control"
              value="<%= inputData ? inputData.additionalInfo : '' %>">
          </div>
          <div class="mb-3">
            <label for="file" class="form-label">Supporting Document:</label>
            <input type="file" id="file" name="file" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>

</html>